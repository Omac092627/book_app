<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="/styles/reset.css">
  <link rel="stylesheet" href="/styles/style.css">
  <title>Forms and Such</title>
</head>

<body>

  <%- include('../pages/partials/header') %>
  
  <main>

    <ul>
      <li id="listItems">
        <img id="bookCover" src="<%= book.image_url %>">
        Tittle: <%= book.title %></br>
        Authors: <%= book.authors %>
      </li>

      <button id="edit">Update</button>

      <span id="flex">
        <form id="edit-task-form"  method="post" action="/update-book/<%= book.id %>?_method=put">
          <input class="update" name="title" value= "<%= book.title %>" /><br>
          <input class="update" name="image" value= "<%= book.image_url %>" /><br>
          <input class="update" name="author" value= "<%= book.authors %>" /><br>
          <input class="update" name="isbn" value= "<%= book.isbn %>" /><br>
          <textarea id="descript" class="update" name="description" ><%= book.descriptions %></textarea><br>
          
        <div class="dropdown">
          <button class="dropbtn">--populated bookshelf</button>
          <div id="myDropdown" class="dropdown-content">
            <a href="/onebook/<%=book.id%>" name="title"><%=book.title%></a>
            
          </div>
        </div>
        
        
        
        
        <button type="submit">Update</button>      
      </form>
    </span>
    <form method="post" action="/delete-book/<%= book.id %>?_method=delete">
      <button type="submit" id="delete">Delete</button>
    </form>
    
    
    
  </ul>

  </main>
  
  <%- include('../pages/partials/footer') %>


  <%- include('../pages/partials/scripts') %>

</body>
</html>